<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
      version="2.5">

    <display-name>Appcelerator Platform</display-name>

    <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/classes/spring-beans-runtime.xml</param-value>
    </context-param>  

    <context-param>
      <param-name>log4jConfigLocation</param-name>
      <param-value>/WEB-INF/classes/log4j.properties</param-value>
    </context-param>
    
    <context-param>
      <param-name>log4jRefreshInterval</param-name>
      <param-value>60000</param-value>
    </context-param>
   
    <context-param>
      <param-name>log4jExposeWebAppRoot</param-name>
      <param-value>false</param-value>
    </context-param>
   
    <filter>
      <description>Filter required for all Appcelerator servlets</description>
      <filter-name>Appcelerator</filter-name>
      <filter-class>org.appcelerator.servlet.filter.AppceleratorFilter</filter-class>
      <init-param>
        <param-name>cookieName</param-name>
        <param-value>AUID</param-value>
      </init-param>
      <init-param>
        <param-name>cookieDuration</param-name>
        <param-value>5y</param-value>
      </init-param>
      <init-param>
        <param-name>trackSubdomains</param-name>
        <param-value>true</param-value>
      </init-param>
    </filter>

    <filter-mapping>
      <filter-name>Appcelerator</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
      <listener-class>org.appcelerator.servlet.listener.AppceleratorListener</listener-class>
    </listener>

    <servlet>
    	<servlet-name>dispatcherServlet</servlet-name>
    	<servlet-class>org.appcelerator.servlet.dispatcher.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>dispatcherServlet</servlet-name>
      <url-pattern>/-/*</url-pattern>
    </servlet-mapping>

</web-app>
