$APP_CMD=/usr/bin/app
$APPC_CMD=/usr/bin/appcelerator
$INSTALL_DIR=/Library/Appcelerator

#
# we need to check and see if we're in pre-flight mode
#
if [ $UID -eq 0 ]
then
    if [ "$1" == "--postflight--" ]
    then
         echo "mkdir -p $INSTALL_DIR/releases" >> /tmp/appcelerator_installer.log
         mkdir -p $INSTALL_DIR/releases
         
         echo "mkdir -p $INSTALL_DIR/updates" >> /tmp/appcelerator_installer.log
         mkdir -p $INSTALL_DIR/updates

         echo "chmod -R 0777 $INSTALL_DIR/releases" >> /tmp/appcelerator_installer.log
         chmod -R 0777 $INSTALL_DIR/releases

         echo "chmod -R 0777 $INSTALL_DIR/updates" >> /tmp/appcelerator_installer.log
         chmod -R 0777 $INSTALL_DIR/updates

         echo "chmod -R 0666 $INSTALL_DIR/build.yml" >> /tmp/appcelerator_installer.log
         chmod -R 0666 $INSTALL_DIR/build.yml

         echo "chmod +x $INSTALL_DIR/appcelerator" >> /tmp/appcelerator_installer.log
         chmod +x $INSTALL_DIR/appcelerator

         # things that require root
              echo "chown -R root:admin $INSTALL_DIR" >> /tmp/appcelerator_installer.log
              chown -R root:admin $INSTALL_DIR

              echo "chown -R root:admin $APPC_CMD" >> /tmp/appcelerator_installer.log
              chown -R root:admin $APPC_CMD

              echo "ln -fs $INSTALL_DIR/appcelerator $APP_CMD" >> /tmp/appcelerator_installer.log
              ln -fs $INSTALL_DIR/appcelerator $APP_CMD

              echo "chmod +x $APP_CMD" >> /tmp/appcelerator_installer.log
              chmod +x $APP_CMD
         # end things that require root

         echo "$INSTALL_DIR/app" >> /tmp/appcelerator_installer.log
         echo "PATH=$PATH" >> /tmp/appcelerator_installer.log
         PATH=$PATH:/usr/local/bin:/opt/local/bin:/usr/bin:/bin:$INSTALL_DIR
         ruby $INSTALL_DIR/app --install >>/tmp/appcelerator_installer.log 2>&1

         echo "open http://www.appcelerator.org/gettingstarted" >> /tmp/appcelerator_installer.log
         open "http://www.appcelerator.org/gettingstarted"

         echo "exiting successfully!" >> /tmp/appcelerator_installer.log
         exit 0
    fi 
fi

$INSTALL_DIR/appcelerator $*
exit $?
