BUILD_DIR = File.dirname(__FILE__)
require File.expand_path("#{BUILD_DIR}/../build.rb")

desc 'build all controls'
task :all => [:default] do
end

task :default => [:stage] do
  
  control_dir = "#{STAGE_DIR}"
  
  controls = []

  Dir["#{BUILD_DIR}/*"].each do |dir|
    next unless File.directory?(dir)
    name = File.basename(dir)
    FileUtils.cd(dir) do |d|
      call_rake
      FileUtils.cp_r "#{name}.zip", "#{control_dir}/control_#{name}.zip"
      controls << name
    end
  end
  
  FileUtils.rm_rf "#{STAGE_DIR}/all_controls.zip"
  
  Zip::ZipFile.open("#{STAGE_DIR}/all_controls.zip", Zip::ZipFile::CREATE) do |zipfile|
    dofiles("#{STAGE_DIR}") do |f|
      filename = f.to_s
      next unless File.extname(filename)=='.zip'
      next if filename == '.'
      zipfile.add(filename,"#{STAGE_DIR}/#{filename}")
    end
	 zipfile.get_output_stream('build.yml') do |o|
	   c = {:name=>'allcontrols',:type=>'allcontrols',:version=>1.0}	
	   o.puts c.to_yaml
    end
  end
  
  controls.each do |name|
    FileUtils.rm_rf "#{BUILD_DIR}/#{name}/#{name}.zip"
  end
  
end
