  FileUtils.cd("#{BUILD_DIR}/appengine") do |d|
    system "rake"
  end
end

task :dotnet do
  FileUtils.cd("#{BUILD_DIR}/dotnet") do |d|
    system "rake"
  end
end

task :ruby do
  FileUtils.cd("#{BUILD_DIR}/ruby") do |d|
    system "rake"
  end
end

task :perl do
  FileUtils.cd("#{BUILD_DIR}/perl") do |d|
    system "rake"
  end
end

task :php do
  FileUtils.cd("#{BUILD_DIR}/php") do |d|
    system "rake"
  end
end

task :zend do
  FileUtils.cd("#{BUILD_DIR}/zend") do |d|
    system "rake"
  end
end

task :merb do
  FileUtils.cd("#{BUILD_DIR}/merb") do |d|
