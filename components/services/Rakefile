BUILD_DIR = "#{File.dirname(__FILE__)}"

require File.expand_path("#{BUILD_DIR}/../build.rb")


task :all do
  build_subdir BUILD_DIR
end

task :java do
  FileUtils.cd("#{BUILD_DIR}/java") do |d|
    system "rake"
  end
end

task :python do
  FileUtils.cd("#{BUILD_DIR}/python") do |d|
    system "rake"
  end
end

