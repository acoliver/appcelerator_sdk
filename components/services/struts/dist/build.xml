<?xml version="1.0" encoding="UTF-8"?>
<!-- ==================================================================== -->
<!-- Appcelerator Project Build                                           -->
<!-- ==================================================================== -->
<project name="build-appcelerator" default="compile" basedir=".">

    <property name="classes.dir" value="public/WEB-INF/classes"/>
    <property name="lib.dir" value="public/WEB-INF/lib"/>

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>

	<target name="banner">
		<echo>Appcelerator RIA Platform for Java</echo>
		<echo>Licensed under the GNU GPL version 3 or later</echo>
		<echo>Please see COPYING for more details on license requirements</echo>
	</target>

	<target name="compile" description="Compiles the Java code" depends="banner">
		<mkdir dir="${classes.dir}"/>
		<javac debug="true" srcdir="src" destdir="${classes.dir}" classpathref="classpath" includeAntRuntime="false"/>
	</target>

	<target name="clean">
		<delete dir="${classes.dir}/**"/>
	</target>

</project>
