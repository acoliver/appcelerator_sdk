<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
      version="2.5">

    <display-name>Appcelerator RIA Application</display-name>

    <servlet>
    	<servlet-name>ajaxServiceTransport</servlet-name>
    	<servlet-class>org.appcelerator.transport.AjaxServiceTransportServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>ajaxServiceTransport</servlet-name>
      <url-pattern>/servicebroker</url-pattern>
    </servlet-mapping>

</web-app>
