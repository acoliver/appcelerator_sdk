<?xml version="1.0" encoding="UTF-8"?>

<!-- ==================================================================== -->
<!-- Appcelerator Platform SDK                                            -->	
<!-- ==================================================================== -->

<project name="Appcelerator Platform SDK" default="dist" basedir=".">
	
	<path id="classpath">
		<fileset dir="${lib}" includes="*.jar"/>
	</path>
	
	<target name="java_compile" description="Compiles the Java code">
		<javac debug="true" srcdir="${source}" destdir="${dest}" classpathref="classpath" includeAntRuntime="false"/>
	</target>

	<target name="java_jar" description="Jars Java code">
		<jar destfile="${jar}">
			<fileset dir="${classes}">
				<include name="**/*"/>
			</fileset>
			<fileset dir="${source}">
				<exclude name="**/*.java"/>
			</fileset>
		</jar>
	</target>
	
</project>