<?xml version="1.0" encoding="UTF-8"?>

<!-- ==================================================================== -->
<!-- Appcelerator Platform SDK                                            -->	
<!-- ==================================================================== -->

<project name="Appcelerator Platform SDK" default="dist" basedir=".">
	
	<path id="classpath">
		<fileset dir="${lib}" includes="*.jar"/>
	</path>
	
   <target name="dist" description="Builds entire distribution" depends="compile,jar,zip"></target>

	<target name="compile" description="Compiles the Java code">
		<javac debug="true" srcdir="${source}" destdir="${dest}" classpathref="classpath" includeAntRuntime="false"/>
	</target>

	<target name="jar" description="Jars Java code">
		<jar destfile="${dist}/lib/${jar}">
			<fileset dir="${classes}">
				<include name="**/*"/>
			</fileset>
			<fileset dir="${source}">
				<exclude name="**/*.java"/>
			</fileset>
		</jar>
	</target>

   <target name="zip" description="Zip Java distribution">
		<zip destfile="${zip}">
			<fileset dir="${dist}">
				<include name="**/*"/>
			</fileset>
		</zip>
   </target>
	
</project>
