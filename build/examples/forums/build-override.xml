<?xml version="1.0"?>

<project name="Appcelerator Platform SDK for Java" default="create" basedir=".">
	<target name="hsql" description="sets the db properties for using a hsql db">
		<input message="please enter the full path to your db (ex: /tmp/forums.db)" addproperty="db.path"/>
		<propertyfile file="src/web/WEB-INF/classes/appcelerator.properties">
			<entry key="DB_JDBC_URL" value="jdbc:hsqldb:${db.path}"/>
			<entry key="DB_DRIVER" value="org.hsqldb.jdbcDriver"/>
			<entry key="DB_USERNAME" value="sa"/>
			<entry key="DB_PASSWORD" value=""/>
			<entry key="DB_DIALECT" value="org.hibernate.dialect.HSQLDialect"/>
		</propertyfile>
	</target>
</project>
